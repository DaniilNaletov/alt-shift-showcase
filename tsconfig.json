{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@altui/icons": ["altui/icons"],
      "@altui": ["altui"],
      "@assets/*": ["assets/*"],
      "@/*": ["./*"]
    },

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true
  },
  "include": ["src", ".eslintrc.cjs", "tailwind.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
